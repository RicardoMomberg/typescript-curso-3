{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        // Para debugar o código vamos usar sourceMap (usado somente em ambiente de desenvolvimento, nunca em produção)
        "sourceMap": true 
    },
    "include": ["app/src/**/*"]
}